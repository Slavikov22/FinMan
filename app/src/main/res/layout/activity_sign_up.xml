<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/auth_bg" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/layoutLogin"
            style="@style/Auth_Field_Layout"
            android:layout_marginBottom="@dimen/big_padding"
            app:layout_constraintBottom_toTopOf="@id/layoutEmail">

            <ImageView
                style="@style/Auth_Field_Image"
                android:src="@drawable/ic_person_black_24dp" />

            <android.support.design.widget.TextInputLayout style="@style/Auth_TextInputLayout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etLogin"
                    style="@style/Auth_EditText"
                    android:hint="@string/hint_login"
                    android:inputType="text" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutEmail"
            style="@style/Auth_Field_Layout"
            android:layout_marginBottom="@dimen/big_padding"
            app:layout_constraintBottom_toTopOf="@id/layoutPassword">

            <ImageView
                style="@style/Auth_Field_Image"
                android:src="@drawable/ic_email_black_24dp" />

            <android.support.design.widget.TextInputLayout style="@style/Auth_TextInputLayout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etEmail"
                    style="@style/Auth_EditText"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutPassword"
            style="@style/Auth_Field_Layout"
            android:layout_marginBottom="@dimen/big_padding"
            app:layout_constraintBottom_toTopOf="@id/layoutRepeatPassword">

            <ImageView
                style="@style/Auth_Field_Image"
                android:src="@drawable/ic_lock_black_24dp" />

            <android.support.design.widget.TextInputLayout style="@style/Auth_TextInputLayout.Password">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etPassword"
                    style="@style/Auth_EditText.Password"
                    android:hint="@string/hint_password" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutRepeatPassword"
            style="@style/Auth_Field_Layout"
            android:layout_marginBottom="@dimen/big_padding"
            app:layout_constraintBottom_toTopOf="@id/layoutCurrency">

            <ImageView
                style="@style/Auth_Field_Image"
                android:src="@drawable/ic_lock_black_24dp" />

            <android.support.design.widget.TextInputLayout style="@style/Auth_TextInputLayout.Password">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etRepeatPassword"
                    style="@style/Auth_EditText.Password"
                    android:hint="@string/hint_repeat_password" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCurrency"
            style="@style/Auth_Field_Layout"
            android:layout_marginBottom="@dimen/biggest_padding"
            app:layout_constraintBottom_toTopOf="@id/btnSignUp">

            <ImageView
                style="@style/Auth_Field_Image"
                android:src="@drawable/ic_dollar_black_24dp" />

            <Spinner
                android:id="@+id/spinnerCurrency"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="?colorPrimaryDark"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/small_padding"
                android:paddingEnd="@dimen/small_padding" />

        </LinearLayout>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="0dp"
            android:clickable="true"
            android:layout_height="@dimen/button_height"
            android:layout_marginStart="@dimen/main_padding"
            android:layout_marginEnd="@dimen/main_padding"
            android:layout_marginBottom="@dimen/big_padding"
            android:text="@string/btn_sign_up"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>