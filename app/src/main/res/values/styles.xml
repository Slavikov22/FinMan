<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryLight">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackground">@color/colorBackground</item>

        <item name="colorTextOnPrimary">@color/colorTextOnPrimary</item>
        <item name="colorTextOnAccent">@color/colorTextOnAccent</item>

        <item name="android:textColor">#000000</item>
        <item name="android:buttonStyle">@style/Button</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">@dimen/default_button_width</item>
        <item name="android:layout_height">@dimen/default_button_height</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

</resources>
